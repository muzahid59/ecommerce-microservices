{
  "services": {
    "inventory": {
      "url": "http://localhost:4000",
      "routes": [
        {
          "path": "/inventories/:id",
          "methods": ["put"],
          "middlewares": ["auth"]
        },
        {
          "path": "/inventories/:id/details",
          "methods": ["get"],
          "middlewares": ["auth"]
        }
      ]
    },
    "product": {
      "url": "http://localhost:4001",
      "routes": [
        {
          "path": "/products",
          "methods": ["get", "post"],
          "middlewares": ["auth"]
        },
        {
          "path": "/products/:id",
          "methods": ["get"],
          "middlewares": []
        }
      ]
    },
    "auth": {
      "url": "http://localhost:4002",
      "routes": [
        {
          "path": "auth/login",
          "methods": ["post"],
          "middlewares": []
        },
        {
          "path": "auth/register",
          "methods": ["post"],
          "middlewares": []
        },
        {
          "path": "auth/verify-token",
          "methods": ["post"],
          "middlewares": []
        },
        {
          "path": "auth/verfiy-email",
          "methods": ["post"],
          "middlewares": []
        }
      ]
    },
    "user": {
      "url": "http://localhost:4002",
      "routes": [
        {
          "path": "/users/:id",
          "methods": ["get"],
          "middlewares": ["auth"]
        }
      ]
    }
  }
}