{
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "lib": ["ESNext"],
        "moduleResolution": "Node",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": ".",
        "baseUrl": "./src", // required for path aliases
        "paths": {
            "*": ["node_modules/*"],
            "@/*": ["*"],
        }
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "dist"]
}